<!-- Page contents
list of trip based on trip id
links to Delete -->

<section>
  <h3>Trip #<%= @trip.id %></h3>

  <table>
    <tr>
      <th>
        <strong>Id</strong>
      </th>
      <th>
        <strong>Date</strong>
      </th>
      <th>
        <strong>Drivers</strong>
      </th>
      <th>
        <strong>Passenger</strong>
      </th>
      <th>
        <strong>Cost</strong>
      </th>
      <th>
        <strong>Rating</strong>
      </th>
    </tr>
    <tr>
      <td>
        <%= @trip.id %>
      </td>
      <td>
        <%= @trip.date = DateTime.now.strftime("%b %d, %Y") %>
      </td>
      <td>
        <%= link_to(@trip.driver.name, driver_path(@trip.driver)) %>
      </td>
      <td>
        <%= @trip.passenger.name%>
      </td>
      <td>
        $<%= @trip.cost/100 %>
      </td>
      <td>
        <%= @trip.rating %>
      </td>
      <td>
        <button class="button-selects">
          <%= link_to("Delete", trip_path(@trip.id), method: :delete, data: { confirm: "Are you sure?" }) %>
        </button>
      </td>
    </tr>
  </table>
</section>
