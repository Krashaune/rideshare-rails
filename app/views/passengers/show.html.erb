 <!-- Page contents
 list of all trips
links to edit & Delete
add a new trip-->

<section>
  <h2 class="details"><%= @passenger.name %> Information</h2>

  <ul class="passenger_details">
    <li>
      <strong>Phone Number:</strong> <%= @passenger.phone_num %>
    </li>
    <li>
      <strong>Total Spent:</strong> $<%=@passenger.total_spent%>
    </li>
    <li>
      <button>
        <%= link_to('Request Ride', passenger_trips_path(@passenger.id),method: :post)%>
      </button>

    </li>
  </ul>
</section>


<section>
  <h2 class="details"><%= @passenger.name %> Trips</h2>

  <ul class="trips_table">
    <li>
      ID
    </li>
    <li>
      Date
    </li>
    <li>
      Driver
    </li>
    <li>
      Rating
    </li>
    <li>
      Cost
    </li>
    <li>

    </li>

    <%@passenger.trips.each do |trip|%>
    <li>
      <%= trip.id %>
    </li>
    <li>
      <%= trip.date.strftime("%b %d, %Y") %>
    </li>
    <li>
      <%= trip.driver_id %>
    </li>
    <li>
      <%= trip.rating %>
    </li>
    <li>
      $<%= trip.cost/100 %>
    </li>
      <button>
        <%= link_to('Delete',passenger_path(@passenger.id), method: :delete, data: {confirm: "Are you sure?"})%>
      </button>
    <%end%>


  </ul>

</section>
