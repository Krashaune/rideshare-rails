<!-- Page contents
list of all passengers
links to edit & Delete
add a new trip-->

<section>
  <h2 class="details"><%= @passenger.name %> Information</h2>

  <ul class="passenger_details">
    <li>
      <strong>Phone Number:</strong> <%= @passenger.phone_num %>
    </li>
    <li>
      <strong>Total Spent:</strong> $<%=@passenger.total_spent%>
    </li>
    <li>
      <button>
        <%= link_to('Request Ride', passenger_trips_path(@passenger.id),method: :post)%>
      </button>

    </li>
  </ul>
</section>


<section>
  <h2 class="details"><%= @passenger.name %> Trips</h2>

  <table class="trips_table">
    <th>
      <strong>ID</strong>
    </li>
    <th>
      <strong>Date</strong>
    </th>
    <th>
      <strong>Driver_id</strong>
    </th>
    <th>
      <strong>Passenger</strong>
    </th>
    <th>
      <strong>Cost</strong>
    </th>
    <th>
      <strong>Rating</strong>
    </th>
  </tr>
  <%@passenger.trips.each do |trip|%>
  <tr>
    <td>
      <%= link_to(trip.id, trip_path(trip)) %>
    </td>
    <td>
      <%= trip.date.strftime("%b %d, %Y") %>
    </td>
    <td>
      <%= trip.driver.id%>
    </td>
    <td>
      <%= trip.passenger.name%>
    </td>
    <td>
      $<%= trip.cost/100 %>
    </td>
    <td>
      <%= trip.rating %>
    </td>
    <td>
      <button class="button-selects">
        <%= link_to('Delete',trip_path(trip.id), method: :delete, data: {confirm: "Are you sure?"})%>
      </button>
    </td>
  </tr>

  <% end %>
  </table>

</section>
