<%= form_for @driver do |f| %>
  <%= f.label :name, "Driver Name" %>
  <%= f.text_field :name %>

  <%= f.label :vin, "Vin Number" %>
  <%= f.text_field :vin %>

  <%= f.label :car_make, "Car Make" %>
  <%= f.text_field :car_make %>

  <%= f.label :car_model, "Car Model" %>
  <%= f.text_field :car_model %>

  <%= f.submit %>
<%end%>
