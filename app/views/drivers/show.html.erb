<h2><%= @driver.name %></h2>

<p>
  VIN: <%= @driver.vin %>
</p>

<section>
  <h3>Driver Trips</h3>

  <table>
    <tr>
      <th>
        <strong>Id</strong>
      </th>
      <th>
        <strong>Date</strong>
      </th>
      <th>
        <strong>Driver_id</strong>
      </th>
      <th>
        <strong>Passenger</strong>
      </th>
      <th>
        <strong>Cost</strong>
      </th>
      <th>
        <strong>Rating</strong>
      </th>
    </tr>
    <% @driver.trips.each do |trip| %>
    <tr>
      <td>
        <%= trip.id %>
      </td>
      <td>
        <%= trip.date %>
      </td>
      <td>
        <%= trip.driver.id%>
      </td>
      <td>
        <%= trip.passenger.name%>
      </td>
      <td>
        $<%= trip.cost/100 %>
      </td>
      <td>
        <%= trip.rating %>
      </td>
      <td>
        <button class="button-selects">
          <%= link_to("Delete", driver_path(@driver.id), method: :delete, data: { confirm: "Are you sure?" }) %>
        </button>
      </td>
    </tr>

    <% end %>
  </table>
</section>
